<div id="map" style="width: 960px; height: 350px;"></div>
<% content_for :javascripts do -%>
  <% javascript_tag do -%>
    new StoreViewer({
      mapContainer: 'map',
      home:         new GLatLng(<%= current_user.latitude %>, <%= current_user.longitude %>),
      stores:       <%= @stores.to_json %>
    });
  <% end %>
<% end -%>
